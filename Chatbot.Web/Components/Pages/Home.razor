@page "/"
@using Chatbot.Web.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Chatbot - Home</PageTitle>

<div class="home-container">
    <div class="home-content">
        <h1>Welcome to Chatbot</h1>
        <p>An intelligent conversational assistant powered by AI</p>
        
        <div class="action-buttons">
            @if (AuthService.IsAuthenticated())
            {
                <a href="/chat" class="btn btn-primary btn-lg">Go to Chat</a>
            }
            else
            {
                <a href="/login" class="btn btn-primary btn-lg">Login</a>
                <a href="/register" class="btn btn-outline-primary btn-lg">Register</a>
            }
        </div>

        <div class="features">
            <h3>Features:</h3>
            <ul>
                <li>Real-time conversations with AI chatbot</li>
                <li>Sentiment analysis of messages</li>
                <li>Intent recognition</li>
                <li>Conversation history tracking</li>
                <li>Secure JWT authentication</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        text-align: center;
    }

    .home-content {
        max-width: 600px;
        padding: 2rem;
    }

    .home-content h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .home-content p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .features {
        text-align: left;
        margin-top: 3rem;
    }

    .features h3 {
        margin-bottom: 1rem;
    }

    .features ul {
        list-style-position: inside;
    }

    .features li {
        margin-bottom: 0.5rem;
    }
</style>

