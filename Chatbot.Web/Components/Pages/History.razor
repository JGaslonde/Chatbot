@page "/history"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components
@attribute [Authorize]

<PageTitle>Conversation History</PageTitle>

<div class="history-container">
    <h1>Conversation History</h1>
    <p class="lead">View and manage your past conversations.</p>

    <SearchBox 
        Placeholder="Search conversations by title or content..."
        SearchQuery="@searchQuery"
        OnSearch="@OnSearchChanged"
    />

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading your conversations...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Message="@errorMessage" Type="Alert.AlertType.Error" />
    }
    else if (filteredConversations.Count == 0)
    {
        <div class="alert alert-info">
            @if (conversations.Count == 0)
            {
                <p>No conversations yet. <a href="/chat">Start a new conversation</a> to get began!</p>
            }
            else
            {
                <p>No conversations match your search.</p>
            }
        </div>
    }
    else
    {
        <div class="conversations-table">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Started</th>
                            <th>Messages</th>
                            <th>Summary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conversation in filteredConversations)
                        {
                            <tr>
                                <td>
                                    <strong>@(conversation.Title ?? "Untitled")</strong>
                                </td>
                                <td>
                                    <small>@conversation.StartedAt.ToString("g")</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@conversation.MessageCount</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(conversation.Summary))
                                    {
                                        <small>@conversation.Summary.Substring(0, Math.Min(50, conversation.Summary.Length))...</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">No summary</small>
                                    }
                                </td>
                                <td>
                                    <a href="@($"/chat/{conversation.Id}")" class="btn btn-sm btn-primary">View</a>
                                    <a href=" @($"/conversation/{conversation.Id}")" class="btn btn-sm btn-info" title="Details">
                                        <span class="bi bi-info-circle"></span>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => ExportConversation(conversation)" title="Export">
                                        <span class="bi bi-download"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(exportMessage))
    {
        <Alert Message="@exportMessage" Type="Alert.AlertType.Success" AutoDismissMs="3000" />
    }
</div>

<style>
.history-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
}

.conversations-table {
    margin-top: 20px;
}

.table {
    margin-bottom: 0;
}

.table tbody tr:hover {
    background-color: #f5f5f5;
}

.table td {
    vertical-align: middle;
}

.btn-sm {
    padding: 4px 8px;
    font-size: 12px;
}
</style>

@code {
    [Inject]
    private IConversationService ConversationService { get; set; } = null!;

    [Inject]
    private ISearchService SearchService { get; set; } = null!;

    private List<ConversationResponse> conversations = new();
    private List<ConversationResponse> filteredConversations = new();
    private string searchQuery = "";
    private string? errorMessage;
    private string? exportMessage;
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadConversations();
    }

    private async Task LoadConversations()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var (success, message, convos) = await ConversationService.GetConversationsAsync();
            if (success && convos != null)
            {
                conversations = convos.OrderByDescending(c => c.StartedAt).ToList();
                filteredConversations = conversations;
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading conversations: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnSearchChanged(string query)
    {
        searchQuery = query;
        filteredConversations = SearchService.SearchConversations(conversations, query);
    }

    private async Task ExportConversation(ConversationResponse conversation)
    {
        try
        {
            var (success, message, data) = await ConversationService.ExportConversationAsJsonAsync(conversation.Id);
            if (success && data != null)
            {
                exportMessage = "Conversation exported successfully!";
                // Trigger download via JS interop would go here
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error exporting conversation: {ex.Message}";
        }
    }
}
