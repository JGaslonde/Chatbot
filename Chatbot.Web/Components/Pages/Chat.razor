@page "/chat"
@page "/chat/{ConversationId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components
@attribute [Authorize]

<PageTitle>Chat</PageTitle>

<div class="chat-container">
    <div class="chat-header">
        <div>
            <h3>@(currentConversation?.Title ?? "New Conversation")</h3>
            @if (currentConversation != null)
            {
                <small class="text-muted">Started: @currentConversation.StartedAt.ToString("g")</small>
            }
        </div>
        <div class="header-actions">
            @if (currentConversation != null)
            {
                <button class="btn btn-sm btn-outline-secondary" @onclick="ExportConversation" title="Export conversation">
                    <span class="bi bi-download"></span> Export
                </button>
            }
            <a href="/" class="btn btn-sm btn-outline-secondary">Back</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Alert Message="@errorMessage" Type="Alert.AlertType.Error" />
    }

    @if (currentConversation == null)
    {
        <div class="empty-state">
            <h4>Start a New Conversation</h4>
            <p>Enter a title for your conversation (optional) and click Start.</p>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Conversation title (optional)"
                       @bind="newConversationTitle"                    disabled="@isLoadingConversation"                />
                <button class="btn btn-primary" @onclick="StartNewConversation"                    disabled="@isLoadingConversation">
                    @if (isLoadingConversation)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Start
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="messages-container" @ref="messagesContainer">
            @foreach (var msg in messages)
            {
                <ChatMessage Message="msg" />
            }
        </div>

        <div class="input-container">
            <ChatInput OnMessageSent="SendMessage" IsDisabled="@isSending" />
        </div>
    }
</div>

@code {
    [Parameter]
    public int ConversationId { get; set; }

    [Inject]
    private IChatService ChatService { get; set; } = null!;

    [Inject]
    private IConversationService ConversationService { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    [Inject]
    private IJSRuntime JSInterop { get; set; } = null!;

    private ConversationResponse? currentConversation;
    private List<MessageDto> messages = new();
    private string newConversationTitle = "";
    private string? errorMessage;
    private bool isSending;
    private bool isLoadingConversation;
    private ElementReference messagesContainer;

    protected override async Task OnInitializedAsync()
    {
        await LoadConversationIfSpecified();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || messages.Count > 0)
        {
            await ScrollToBottom();
        }
    }

    private async Task LoadConversationIfSpecified()
    {
        if (ConversationId > 0)
        {
            isLoadingConversation = true;
            try
            {
                var (success, message, conversation) = await ConversationService.GetConversationAsync(ConversationId);
                if (success && conversation != null)
                {
                    currentConversation = conversation;
                    var (historySuccess, historyMessage, history) = await ChatService.GetHistoryAsync(ConversationId);
                    if (historySuccess && history != null)
                    {
                        messages = history.Messages.OrderBy(m => m.SentAt).ToList();
                    }
                }
                else
                {
                    errorMessage = message;
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error loading conversation: {ex.Message}";
            }
            finally
            {
                isLoadingConversation = false;
            }
        }
    }

    private async Task StartNewConversation()
    {
        isLoadingConversation = true;
        errorMessage = null;
        try
        {
            var (success, message, conversation) = await ChatService.StartConversationAsync(newConversationTitle);
            if (success && conversation != null)
            {
                currentConversation = conversation;
                messages.Clear();
                newConversationTitle = "";
                errorMessage = null;
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error starting conversation: {ex.Message}";
        }
        finally
        {
            isLoadingConversation = false;
        }
    }

    private async Task SendMessage(string message)
    {
        if (string.IsNullOrWhiteSpace(message) || currentConversation == null)
            return;

        isSending = true;
        errorMessage = null;

        try
        {
            // Add user message to UI immediately
            messages.Add(new MessageDto(
                0,
                message,
                "User",
                DateTime.UtcNow,
                "Neutral",
                null,
                0));

            var (success, responseMessage, response) = await ChatService.SendMessageAsync(currentConversation.Id, message);

            if (success && response != null)
            {
                // Add bot response
                messages.Add(new MessageDto(
                    response.ConversationId,
                    response.Message,
                    "Bot",
                    response.Timestamp,
                    response.Sentiment,
                    response.Intent,
                    response.SentimentScore
                ));
            }
            else
            {
                errorMessage = responseMessage ?? "Error sending message";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSending = false;
        }
    }

    private async Task ExportConversation()
    {
        if (currentConversation == null)
            return;

        try
        {
            var (success, message, data) = await ConversationService.ExportConversationAsJsonAsync(currentConversation.Id);
            if (success && data != null)
            {
                // Trigger download
                await JSInterop.InvokeVoidAsync("downloadFile", data, $"conversation_{currentConversation.Id}.json");
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error exporting conversation: {ex.Message}";
        }
    }

    private async Task ScrollToBottom()
    {
        // Auto-scroll would be implemented here with JS interop
        await Task.CompletedTask;
    }
}

